{
  "manifest_version": 3,
  "name": "LeetCode to Notion",
  "version": "1.0",
  "description": "Save LeetCode problems to Notion",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://localhost:5001/*", "https://leetcode.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"]
    }
  ]
}
